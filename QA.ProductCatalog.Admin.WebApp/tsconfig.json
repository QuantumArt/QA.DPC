{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esNext",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [ "es6", "es2016.array.include", "es2017.object", "dom" ],
    "types": [ "node", "webpack-env", "jest" ],
    "baseUrl": ".",
    "paths": {
      "*": [ "ClientApp/*", "ClientApp/Packages/*" ]
    },
    "outDir": "wwwroot/js/Bundles"
  },
  "include": ["ClientApp/**/*", "Views/**/*"]
}
